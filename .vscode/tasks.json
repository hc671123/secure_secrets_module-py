{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build venv",
            "type": "shell",
            "command": ".//.vscode//createvenv.cmd",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Install dependencies",
            "type": "shell",
            "command": ".//.vscode//install_dependencies.cmd",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Publish to testPyPI",
            "type": "shell",
            "command": ".//.vscode//publish_to_testpypi.cmd",
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Publish to PyPI",
            "type": "shell",
            "command": ".//.vscode//publish_to_pypi.cmd",
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}